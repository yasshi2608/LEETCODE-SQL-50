SELECT
    s.student_id,
    s.student_name,
    sub.subject_name,
    #COUNT(e.student_id) counts the number of attended exams.
#COALESCE(..., 0) handles cases where no exams are attended, replacing NULL with 0.
    COALESCE(COUNT(e.student_id), 0) AS attended_exams
FROM Students s
#match every student with each subject
CROSS JOIN Subjects sub
LEFT JOIN Examinations e
ON s.student_id = e.student_id
AND sub.subject_name = e.subject_name
GROUP BY s.student_id, s.student_name, sub.subject_name
ORDER BY s.student_id, sub.subject_name;
